<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/colorbiru">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="277dp"
        android:layout_margin="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/masjid2" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="120dp"
        android:layout_marginTop="2dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btn_identitas"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:text="Identitas Masjid"/>

        <Button
            android:id="@+id/btn_jadwal"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginLeft="55dp"
            android:text="Jadwal Sholat"/>

        <Button
            android:id="@+id/btn_merquee"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="-250dp"
            android:text="Merquee"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btn_pengumuman"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="5dp"
            android:text="Pengumuman Masjid" />

        <Button
            android:id="@+id/btn_slide"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginLeft="55dp"
            android:text="Slide Show"/>

        <Button
            android:id="@+id/btn_tagline"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="-250dp"
            android:text="Tagline Masjid"/>


    </LinearLayout>

</LinearLayout>